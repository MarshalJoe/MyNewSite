{% extends "base.html" %}


{% block splash %}
<!-- splash section -->

<div class="splash">
	<div class="greeting">
		<p>I am a freelancing</p>
		<p>web professional*</p>
		<p>*writer/coder/maker</p>
	</div>
</div>

{% endblock %}



{% block about %}
<!-- about section -->

{% setcontent about = 'page/about' %}
<div class="story">
	<div id="aboutAnchor"></div>
	<div class="text">
		<h1>My Story</h1>
		<p>{{ about.body }}</p>
	</div>

