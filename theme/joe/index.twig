{% extends "base.html" %}


{% block splash %}
<!-- about section -->

{% setcontent about = 'page/about' %}
<div class="splash">
	<div class="greeting">
		<p>I'm a freelancing</p>
		<p>web professional</p>
		<p>(writer/coder/maker)</p>
		<p></p>
	</div>
</div>
{% endblock %}



{% block about %}
<!-- tech section -->

{% setcontent about = 'about/tech' %}
<div class="story">

	<div class="text">
		<p>{{ about.body }}</p>
	</div>

</div>
{% endblock %}




{% block writing %}
<!-- writing section -->

{% setcontent write = 'page/writing' %}
<section class="writing card" style="background: url({{ write.image|image }}); background-size: cover" data-stellar-background-ratio="0.25">

	<div class="text">
		<p>{{ write.body }}</p>
	</div>

</section>
{% endblock %}





