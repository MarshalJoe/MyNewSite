{% extends "base.html" %}


{% block about %}
<!-- about section -->

{% setcontent about = 'page/about' %}
<section class="about card" style="background: url({{ about.image|image }}); background-size:cover" data-stellar-background-ratio="0.35">

	<div class="text">
		<div class="title">{{ about.teaser }}</div>
		<p>{{ about.body }}</p>
		<p class="icons"><i class="fa fa-github fa-2x"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-linkedin fa-2x"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-twitter fa-2x"></i></p>
	</div>

</section>
{% endblock %}



