{% extends "base.html" %}


{% block splash %}
<!-- splash section -->

<div class="splash">
	<div class="greeting">
		<p>I am a freelancing</p>
		<p>web professional*</p>
		<p>*writer/coder/maker</p>
	</div>
</div>

{% endblock %}



{% block about %}
<!-- about section -->

{% setcontent about = 'page/about' %}
<div class="story">
	<div id="aboutAnchor"></div>
	<div class="text">
		<h1>My Story</h1>
		<p>{{ about.body }}</p>
	</div>

<div class="about-pic" style="background: url({{ about.image|image }}); background-size: cover" data-stellar-background-ratio="0.25"></div>

</div>
{% endblock %}


{% block skills %}
<div class="skill-container">
	<div class="text">
		<h1 class="skill-title">My Skills</h1>
		<div id="codeAnchor" class="skills">
			<div class="icons"><h1><i class="fa fa-users fa-2x"></i></h1><p>Behavior-Driven Design</p></div>
			<div class="icons"><h1><i class="fa fa-terminal fa-2x"></i></h1><p>Clean, Commented Code</p></div>
			<div class="icons"><h1><i class="fa fa-wrench fa-2x"></i></h1><p>Good 'Ol Fashioned Grit</p></div>
		</div>
	</div>
</div>
{% endblock %}

{% block code %}
{% setcontent tech = 'page/tech' %}
<div class="code-pic" style="background: url({{ tech.image|image }}); background-size: cover" data-stellar-background-ratio="0.25">
</div>
{% endblock %}


{% block writing %}

{% setcontent write = 'page/writing' %}

<div id="writingAnchor" class="pencil-pic" style="background: url({{ write.image|image }}); background-size: cover" data-stellar-background-ratio="0.25">
	<div class="text">
		<h1>My Writing</h1>
		<p>{{ write.body }}</p>
	</div>
</div>


{% endblock %}

{% block experience %}
	<div id="experienceAnchor" class="resume">
		<div class="work">
			<h1>Experience</h1>
			<br>
			<h2>Copywriter @Spiceworks <em>Dec 2013 - current</em></h2>
			<p>At Spiceworks I take on a variety of both front-facing and internal projects, but mostly I write "Data Gone Spicy" papers - fun top-of-the-funnel marketing pieces highlighting popular IT trends in a fun way</p>
			<h2>Web Developer @Prepify <em>Oct 2013 - Feb 2014</em></h2>
			<p>Prepify was founded to level the SAT-prep playing field and provide quality test preparation for everyone - regardless of income.</p>
			<p>First began as a MakerSquare capstone project, later rebooted at the LAUNCH hackathon February 21st, 2014.</p>
			<ul>
				<li>Original Repo <i class="fa fa-github"></i></li>
				<li>Reboot <i class="fa fa-github"></i></li>
			</ul>
			<p>Tech used: User and Admin Authentication (via Devise), Email Capability (ActionMailer), JQuery, Ajax, Foundation, Carrierwave, Amazon S3</p>
		</div>
	</div>
{% endblock %}





